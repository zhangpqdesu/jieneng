page {
  background-image: linear-gradient(to bottom, rgba(255, 235, 59, 0.14), rgba(163, 255, 51, 0.23));
}
.out {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.2);
}
.out .title {
  text-align: center;
  background-color: #fdfce2;
  font-size: 50rpx;
  font-weight: bold;
  padding-top: 50rpx;
}
.out .subTitle {
  text-align: center;
  background-color: #fdfce2;
  font-size: 25rpx;
  color: rgba(128, 128, 128, 0.6);
  padding: 10rpx;
}
.out .select {
  background-color: #fdfce2;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 100rpx;
  font-weight: 600;
}
.out .select .item {
  color: #ccc;
}
.out .select .item.active {
  color: #000;
}
.out .box {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 650rpx;
  height: 800rpx;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.5);
  border-radius: 15px;
}
.out .box .text {
  margin-left: 70rpx;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
  font-size: 35rpx;
  margin-right: 420rpx;
}
.out .box .text2 {
  margin-left: 70rpx;
  margin-top: 100rpx;
  margin-bottom: 80rpx;
  font-size: 35rpx;
}
.out .box .return {
  display: flex;
  align-items: center;
  /* 垂直居中对齐 */
}
.out .box .return .image {
  width: 30rpx;
  height: 30rpx;
}
.out .box .border {
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 550rpx;
  height: 100rpx;
  background-color: rgba(204, 204, 204, 0.3);
  border-radius: 50px;
  display: flex;
}
.out .box .border .block {
  align-items: center;
  margin: 10px;
}
.out .box .border .verification {
  position: absolute;
  font-size: 28rpx;
  right: 5%;
  margin-top: 30rpx;
}
.out .box .button {
  margin-top: 100px;
  width: 550rpx;
  background-color: rgba(247, 183, 32, 0.8);
  color: #000;
  font-weight: 500;
  font-size: 35rpx;
  border-radius: 50px;
}
.out .box .button2 {
  margin-top: 100px;
  width: 550rpx;
  background-color: rgba(247, 183, 32, 0.4);
  color: rgba(0, 0, 0, 0.4);
  font-weight: 500;
  font-size: 35rpx;
  border-radius: 50px;
}
.out .box .agree {
  align-items: center;
  margin-top: 25rpx;
  margin-left: 70rpx;
  font-size: 28rpx;
  color: #808080;
}
.out .box .agree .highlight {
  color: #FFC300;
  text-decoration: underline;
}
.out .image1 {
  position: absolute;
  bottom: -2%;
  left: 5%;
  width: 28%;
  height: 28%;
  object-fit: cover;
  image-rendering: pixelated;
}
.out .image2 {
  position: absolute;
  bottom: -50%;
  left: 50%;
  width: 80%;
  height: 80%;
  object-fit: cover;
  image-rendering: pixelated;
}

