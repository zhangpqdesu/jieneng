  left: -400rpx;
  top: 100rpx;
  height: 800rpx;
  width: 800rpx;
}
.out .circle2 {
  position: absolute;
  right: -450rpx;
  top: -400rpx;
  height: 1000rpx;
  width: 1000rpx;
}
.out .default {
  position: absolute;
  left: 50rpx;
  top: 250rpx;
  height: 150rpx;
  width: 150rpx;
}
.out .personalDetail {
  position: absolute;
  left: 240rpx;
  top: 280rpx;
}
.out .personalDetail .name {
  font-size: 35rpx;
}
.out .personalDetail .block {
  margin-top: 25rpx;
  width: 200rpx;
  height: 45rpx;
  border-radius: 45rpx;
  background: rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
}
.out .personalDetail .block .V {
  margin-left: 15rpx;
  width: 32rpx;
  height: 32rpx;
}
.out .personalDetail .block .name2 {
  margin-left: 20rpx;
  font-size: 25rpx;
  color: #F2A922;
}
.out .black {
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  top: 480rpx;
  height: 120rpx;
  width: 600rpx;
  background: linear-gradient(to bottom right, #4f5263, rgba(21, 22, 33, 0.9));
  border-radius: 10px;
}
.out .black .button {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 300rpx;
  height: 40rpx;
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(to bottom right, #efcc98, rgba(222, 174, 104, 0.9));
}
.out .box {
  position: absolute;
  top: 700rpx;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  width: 650rpx;
  height: 600rpx;
  background-color: rgba(255, 255, 255, 0.8);
  box-shadow: 0px 8.5px 25.5px #a2acc2;
  border-radius: 15px;
}
.out .box .text {
  position: absolute;
  top: 5%;
  left: 5%;
}
.out .box .Icon {
  margin-top: 150rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.out .box .Icon .iconText {
  display: flex;
  flex-direction: column;
  /* 设置元素纵向排列 */
  align-items: center;
  /* 可选：居中对齐 */
  width: calc(33.33% - 10px);
  /* 计算每个元素的宽度，减去间距 */
  margin-bottom: 40px;
  /* 间距 */
  box-sizing: border-box;
  /* 让边框和内边距不会撑大元素 */
}
.out .box .Icon .iconText .icon {
  width: 60rpx;
  height: 60rpx;
}
.out .box .Icon .iconText .Text {
  color: #464a57;
  margin-top: 15rpx;
  font-size: 30rpx;
}

