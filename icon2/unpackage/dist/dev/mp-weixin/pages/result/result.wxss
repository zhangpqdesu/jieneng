.out {
  position: relative;
  height: 100vh;
}
.out .image {
  width: 750rpx;
  height: 50%;
}
.out .box1 {
  width: 750rpx;
  height: 1000rpx;
  position: absolute;
  bottom: 0;
  border-top-left-radius: 15px;
  border-top-right-radius: 15px;
  background-color: #fff;
  box-shadow: 0px -10px 10px rgba(0, 0, 0, 0.5);
}
.out .box1 .slide {
  position: absolute;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 80rpx;
  height: 10rpx;
  border-radius: 15px;
  background-color: #979797;
  margin-top: 25rpx;
}
.out .box1 .type {
  margin-top: 80rpx;
  padding-left: 10%;
  padding-right: 10%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.out .box1 .type .item {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.out .box1 .type .item.active {
  background-color: rgba(255, 141, 26, 0.73);
  color: #fff;
  font-size: 22rpx !important;
}
.out .box1 .type .circle {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color: rgba(255, 141, 26, 0.73);
  display: flex;
  justify-content: center;
  align-items: center;
}
.out .box1 .type .circle .text {
  width: 40rpx;
  height: 40rpx;
  font-size: 20rpx;
  line-height: 40rpx;
}
.out .box1 .box2 {
  width: 680rpx;
  height: 300rpx;
  border-color: #E5E5E5;
  background-color: #fff;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.4);
  border-radius: 30px;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  margin-top: 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  padding-left: 60rpx;
  padding-top: 8%;
}
.out .box1 .box2 .content {
  margin-top: -10px;
  display: flex;
  width: 50%;
  text-align: left;
  font-size: 25rpx;
  font-weight: bold;
  text-align: left;
  flex-wrap: wrap;
  /* 让内容自动换行 */
}
.out .box1 .box2 .content input {
  margin-left: 0rpx;
  margin-right: 0rpx;
  width: 150rpx;
  position: relative;
  padding-bottom: 5rpx;
  font-weight: 500 !important;
  flex-basis: 50%;
  /* 每个input占据一半的空间 */
}
.out .box1 .box2 .content input::after {
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  background-color: #cecece;
  position: absolute;
  bottom: 15%;
  left: 0;
}
.out .box1 .line {
  margin-top: 60%;
  width: 750rpx;
  height: 10rpx;
  background-color: #E5E5E5;
  margin-bottom: 60rpx;
  position: relative;
}
.out .box1 .import {
  margin-top: 15%;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  position: absolute;
  top: 50%;
  /* 将 .import 定位到 .line 的中间 */
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  /* 调整位置 */
  z-index: 1;
}
.out .box1 .result {
  font-size: 30rpx;
  display: flex;
  margin-top: 30rpx;
