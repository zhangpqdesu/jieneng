page {
  background-image: linear-gradient(to bottom, rgba(255, 235, 59, 0.14), rgba(163, 255, 51, 0.23));
}
.out {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: rgba(255, 255, 255, 0.2);
  flex: auto;
}
.out .title {
  text-align: center;
  background-color: #fdfce2;
  font-size: 50rpx;
  font-weight: bold;
  padding-top: 50rpx;
}
.out .subTitle {
  text-align: center;
  background-color: #fdfce2;
  font-size: 25rpx;
  color: rgba(128, 128, 128, 0.6);
  padding: 10rpx;
}
.out .box {
  margin-top: 120rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 650rpx;
  height: 1250rpx;
  background-color: rgba(255, 255, 255, 0.5);
  box-shadow: 0px 3px 8px rgba(0, 0, 0, 0.5);
  border-radius: 15px;
}
.out .box .u-form-item {
  white-space: nowrap;
  /* 防止文本换行 */
  margin-top: 30rpx;
  margin-left: 40rpx;
  margin-right: 30rpx;
  font-weight: 600;
}
.out .box .u-input {
  margin-top: 10rpx;
  font-weight: 500;
  border: none !important;
}
.out .box .option {
  display: flex;
}
.out .box .option .triangle {
  margin-left: 400rpx;
  /* 调整与文本之间的距离 */
}
.out .box .button {
  margin-top: 50rpx;
  width: 550rpx;
  background-color: rgba(247, 183, 32, 0.8);
  color: #000;
  font-weight: 500;
  font-size: 35rpx;
  border-radius: 50px;
}
.out .box .button2 {
  margin-top: 50rpx;
  width: 550rpx;
  background-color: rgba(247, 183, 32, 0.4);
  color: rgba(0, 0, 0, 0.4);
  font-weight: 500;
  font-size: 35rpx;
  border-radius: 50px;
}
.out .box .agree {
  align-items: center;
  margin-top: 25rpx;
  margin-left: 70rpx;
  font-size: 28rpx;
  color: #808080;
}
.out .box .agree .highlight {
  color: #FFC300;
  text-decoration: underline;
}

