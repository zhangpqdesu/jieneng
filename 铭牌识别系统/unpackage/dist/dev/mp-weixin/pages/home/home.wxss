.search {
  display: flex;
  height: 30rpx;
  margin-top: 30rpx;
  text-align: center;
}
.search .search-img {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  left: 5%;
  top: 1%;
}
.search .search-input {
  position: absolute;
  left: 55%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  width: 600rpx;
  height: 30rpx;
  background-color: #F7F8FC;
  border-radius: 50px;
  text-align: center !important;
}
.box {
  width: 700rpx;
  height: 250rpx;
  background-color: #FF8D1A;
  box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.4);
  border-radius: 30px;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  margin-top: 50rpx;
  overflow: hidden;
}
.box .nameCompany {
  color: #fff;
  font-weight: bold;
  position: absolute;
  top: 20%;
  left: 15%;
  font-size: 45rpx;
}
.box .modify {
  color: #fff;
  position: absolute;
  top: 60%;
  left: 15%;
  font-size: 30rpx;
}
.box .homeCompany {
  width: 500rpx;
  height: 400rpx;
  position: absolute;
  right: -25%;
  top: -40%;
}
.selectAll {
  display: flex;
  align-content: center;
  justify-content: space-around;
  margin-top: 360rpx;
}
.selectAll .select {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.selectAll .select .block {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 120rpx;
  height: 120rpx;
  border-radius: 15px;
}
.selectAll .select .block .scanSelect {
  width: 55rpx;
  height: 55rpx;
}
.selectAll .select .text {
  margin-top: 5rpx;
  font-size: 25rpx;
  font-weight: bold;
}
.recent {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 60rpx;
  margin-left: 40rpx;
}

